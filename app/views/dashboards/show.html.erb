<div class="top_container">
</div>
<div class="container">

 <h2>Here is your booking history:</h2>


  <%@bookings.each do |booking|%>
  <div class="card-product">
    <% if booking.flat.photo.attached? %>
      <%= cl_image_tag booking.flat.photo.key, width: 150, height: 150, gravity: :face %>
    <% else %>
      <%= image_tag "https://imagizer.imageshack.com/img922/2089/6PYv26.png", opacity: 0.9, crop: :thumb %>
    <% end %>
  <div class="card-product-infos">
    <h4><%=  booking.flat.title %></h4>
    <p><strong>Start date:</strong> <%= booking.start_date %></p>
    <p><strong>End date:</strong> <%= booking.end_date %></p>
    <p><strong>Status:</strong> <%= booking.status %></p>
    <%#= link_to 'Reject', flat_bookings_path, method: :delete, class: 'btn btn-primary' %>
    <%#= link_to 'Confirm', flat_bookings_path, method: :patch, class: 'btn btn-primary' %>
  </div>
</div>
<% end %>


<hr>

<h2>List of your flats:</h2>

<div class="grid-container">
    <%@flats.each do |flat|%>
      <%=link_to flat_path(flat), class: "card-link" do %>
        <div class="card-trip">
          <% if flat.photo.attached? %>
            <%= cl_image_tag flat.photo.key, width: 150, height: 150, gravity: :face %>
          <% else %>
            <%= image_tag "https://imagizer.imageshack.com/img922/2089/6PYv26.png", opacity: 0.9, crop: :thumb %>
          <% end %>
          <div class="card-content">
            <div class="card-trip-infos">
              <div>
                <h2><%= flat.title %></h2>
                <div class="city-info">
                  <i class="fas fa-city"></i>   <p><%=flat.city%></p>
                </div>
              </div>
              <h2 class="card-trip-pricing"><%= flat.price %> â‚¬</h2>
            </div>
          </div>
        </div>
      <%end%>
      <% flat.bookings.each do |booking| %>
      <ul>
        <li><%= booking.user.email%></li>
        <li><%= booking.start_date %></li>
        <li><%= booking.end_date %> </li>
        <li><%= booking.status %></li>
        <%= link_to 'Accept', "/flats/#{booking.flat.id}/bookings/#{booking.id}?status=accepted&fruit=banana", method: :patch %>
        <%= link_to 'Reject', "/flats/#{booking.flat.id}/bookings/#{booking.id}?status=rejected", method: :patch %>
      </ul>
      <% end %>
    <%end%>
  </div>
</div>
