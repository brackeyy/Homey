<!-- # simple form  -->

<div class="container" style="padding: 20px">
  <h2 style="padding: 0px 250px">Post a flat:</h2>
  <div class="form-inputs" style="height: 400px; padding: 50px 250px">
    <%= simple_form_for(@flat) do |f| %>
    <%= f.input :title %>
    <%= f.input :city %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :groceries %>
    <%= f.input :cooking %>
    <%= f.input :sexy_time %>
    <%= f.input :cleaning %>
    <%= f.input :change_diapers %>
    <%= f.input :laundry %>
    <%= f.input :gardening %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
