
<div class="container">
<div class="card-show">
 <img src="<%= cl_image_path @flat.photo.key%>">
  <div class="card-show-infos">
    <div>
      <h2 id="title"><%= @flat.title %></h2>
      <br>
      <p><%= @flat.description %></p>
      <br>
      <p><%= @flat.city %></p>
    </div>
    <h2 class="card-show-user"><%= @flat.user.email %></h2>
    <h2 class="card-show-pricing"><%= @flat.price %> â‚¬ </h2>
  </div>
  <div class="services-info">
    <%if @flat.groceries == true %><p><i class="fas fa-shopping-cart"> Groceries</i></p><%end%>
    <%if @flat.laundry == true%><p><i class="fas fa-tshirt"> Laundry</i></p><%end%>
    <%if @flat.sexy_time == true %><p><i class="fas fa-kiss-wink-heart"> Sexy time</i></p><%end%>
