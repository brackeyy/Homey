
<% if @flat.photo.attached? %> 
<div class="card-show" style="background-image: url('<%= cl_image_path @flat.photo.key, height: 500, width: 400, crop: :fill %>')">
  <h1 class="display-4"><%= @flat.title %></h1>
  <p class="lead"><%= @flat.city %></p>
  <p><%= @flat.price %> € </p>
  <hr class="my-4">
  <p><%= @flat.description %></p>

</div>
<% else %> 
<div class="card-show">
  <h1 class="display-4"><%= @flat.title %></h1>
  <p class="lead"><%= @flat.city %></p>
  <p><%= @flat.price %> € </p>
  <hr class="my-4">
  <p><%= @flat.description %></p>
</div>
<% end %>


