<div class="top_container">
</div>
<div class="container">
<div class="card-show">



<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @flat.photos.each_with_index do |photo, index| %>
      <div class="carousel-item <%= "active" if index == 0 %>">
<!--         <img src="..." class="d-block w-100" alt="Flat photo"> -->
        <%= cl_image_tag photo.key,  crop: :fill, class: "d-block w-100" %>
      </div>
    <% end %>


  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


  <div class="card-show-infos">
    <div>
      <h2 id="title"><%= @flat.title %></h2>
      <br>
      <p><%= @flat.description %></p>
      <br>
      <p><%= @flat.city %></p>
    </div>
    <h2 class="card-show-user"><%= @flat.user.email %></h2>
    <h2 class="card-show-pricing"><%= @flat.price %> â‚¬ </h2>
  </div>
  <div class="services-info">
    <%if @flat.groceries == true %><p class="service-icons mx-5"><i class="fas fa-shopping-cart"> Groceries</i></p><%end%>
    <%if @flat.laundry == true%><p class="service-icons mx-5"><i class="fas fa-tshirt"> Laundry</i></p><%end%>
    <%if @flat.sexy_time == true %><p class="service-icons mx-5"><i class="fas fa-kiss-wink-heart"> Sexy time</i></p><%end%>
    <%if @flat.cooking == true %><p class="service-icons mx-5"><i class="fas fa-utensils"> Cooking</i></p><%end%>
    <%if @flat.gardening == true %><p class="service-icons mx-5"><i class="fas fa-seedling"> Gardening</i></p><%end%>
    <%if @flat.cleaning == true %><p class="service-icons mx-5"><i class="fas fa-hand-sparkles"> Cleaning</i></p><%end%>
    <%if @flat.change_diapers == true%><p class="service-icons mx-5"><i class="fas fa-baby"> Change diapers</i></p><%end%>
  </div>
</div>
<div class="container">
  <h2 class="title-offers">Create a booking:</h2>
  <div class="form-inputs">
    <%= simple_form_for ([@flat, @booking]) do |f| %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <div class="button-centered"><%= f.submit class: 'btn button-offer' %></div>
    <% end %>
  </div>
</div>


<br>
<br>
<br>
<br>
<br>

</div>



<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
     <br>
<div class="button-offer-container">
<%= link_to "Back", flats_path, class: "btn button-offer"%>
</div>
